---
import { Image } from 'astro:assets'; // <-- Importar Image
interface Props {
    title: string;
    description: string;
    imageUrl: ImageMetadata; // <-- Cambiar el tipo
    link: string;
}
const { title, description, imageUrl, link } = Astro.props;
---
<a href={link} class="block bg-white rounded-2xl shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300">
    <Image class="w-full h-48 object-cover" src={imageUrl} alt={`Imagen del proyecto ${title}`} />
    <div class="p-6">
        <h3 class="text-xl font-bold text-gray-900">{title}</h3>
        <p class="mt-2 text-gray-600 line-clamp-2">{description}</p>
    </div>
</a>
