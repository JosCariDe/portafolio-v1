---
// src/components/Footer.astro
import { Icon } from 'astro-icon/components';
const year = new Date().getFullYear();
---
<footer class="bg-gray-100">
    <div class="max-w-6xl mx-auto px-6 py-8 flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-600">
            &copy; {year} Jose Narvaez. Todos los derechos reservados.
        </p>
        <div class="flex items-center gap-4">
            <a href="https://github.com/JosCariDe" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="text-gray-500 hover:text-purple-700">
                <Icon name="mdi:github" class="w-6 h-6" />
            </a>
            <!-- LinkedIn Icon
            <a href="https://linkedin.com/in/tu-usuario" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="text-gray-500 hover:text-purple-700">
                <Icon name="mdi:linkedin" class="w-6 h-6" />
            </a>
            -->
        </div>
    </div>
</footer>
